<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/top_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/cust_vis"
            android:textColor="@color/txt1"
            android:textSize="@dimen/_20sdp" />
        <ImageView
            android:id="@+id/imgAd"
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:layout_below="@id/top_logo"
            android:src="@drawable/img1"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/welcome_txtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgAd"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="10dp"
            android:text="Welcome to Admin VIS \nPortal"
            android:textColor="@color/txt1"
            android:textSize="@dimen/_18sdp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/husnatkhalid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/welcome_txtv"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="20dp"
            android:text="Husnat Khalid"
            android:textColor="@color/txt1"
            android:textSize="@dimen/_22sdp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_130sdp"
            android:orientation="horizontal"
            android:layout_below="@+id/husnatkhalid"
            android:padding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp">

            <soup.neumorphism.NeumorphCardView
                style="@style/Widget.Neumorph.CardView"
                android:layout_width="190dp"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/manageorg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Manage Organization"
                    android:gravity="center"
                    android:background="@drawable/no_background"
                    android:textStyle="bold"
                    android:textColor="@color/txt1"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:textSize="@dimen/_18sdp"
                    tools:ignore="RtlCompat,RtlSymmetry" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/img2"
                    android:layout_gravity="center"
                    android:layout_marginBottom="32dp"/>
            </soup.neumorphism.NeumorphCardView>

            <soup.neumorphism.NeumorphCardView
                style="@style/Widget.Neumorph.CardView"
                android:layout_width="190dp"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/btnstd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Manage \nStudents"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/no_background"
                    android:textColor="@color/txt1"
                    android:textSize="@dimen/_18sdp"
                    tools:ignore="RtlCompat,RtlSymmetry" />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/img3"
                    android:layout_gravity="center"
                    android:layout_marginBottom="32dp"/>
            </soup.neumorphism.NeumorphCardView>
        </LinearLayout>
    </RelativeLayout>
</layout>